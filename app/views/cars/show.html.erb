<div class="container">
  <h1><%= @car.brand%></h1> <h2> <%= @car.model %> </h2>

  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <% @car.photos.each_with_index do |photo, index| %>
        <div class="carousel-item <%= 'active' if index == 0 %>">
          <%= cl_image_tag photo.key, height: 300, crop: :fill, class: 'card-img-top d-block image-carousel rounded'%>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <div class= "container">
    <div class="row">
      <div class="col-8">
        <h3><%= @car.price_in_euros%>â‚¬/hour</h3>
        <h4>About the car: <%= @car.description %></h4>
        <p>Year: <%= @car.year %></p>
        <p>Seats: <%= @car.seats %></p>
        <p>License Plat: <%= @car.license_plate %></p>
        <p>Color: <%= @car.color %></p>@
        <p>Transmission: <%= @car.transmission %></p>
        <p>Energy Source: <%= @car.energy_source %></p>
      </div>
      <div class="col-4">
        <h3>Do you want to Rent?</h3>
      </div>
    </div>
  </div>
</div>

