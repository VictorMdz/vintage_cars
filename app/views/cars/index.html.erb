<div class="content">
  <div class="container my-5">
      <div class="row pt-4">
        <div class="col mb-2">
          <p class= "mb-0">Cars available: <%= @cars.length %></p>
          <h1 class="mb-3">Cars</h1>
            <button type="button" class="btn btn-outline-dark rounded-pill">60's</button>
            <button type="button" class="btn btn-outline-dark rounded-pill">70's</button>
            <button type="button" class="btn btn-outline-dark rounded-pill">80's</button>
            <button type="button" class="btn btn-outline-dark rounded-pill">Manual</button>
            <button type="button" class="btn btn-outline-dark rounded-pill">Sport</button>
        </div>
      </div>
  </div>


  <div class="container">
    <div class="row">
      <div class="col-12 <%= "col-md-6" if @your_index  %>">
          <div class="cards">
            <% @cars.each_with_index do |car, index| %>
              <div class="card mr-3 card-rounded">
                <!-- for when we implement cloudinary -->
                <div id="carouselExampleIndicators-<%= index %>" class="carousel slide" data-interval="false" data-ride="carousel">
                  <div class="carousel-inner">
                    <% car.photos.each_with_index do |photo, index| %>
                      <div class="carousel-item <%= 'active' if index == 0 %>">
                        <%= cl_image_tag photo.key, class: 'card-img-top img-rounded'%>
                      </div>
                    <% end %>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators-<%= index %>" role="button" data-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators-<%= index %>" role="button" data-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                    </a>

                </div>
                <div class="card-body">
                  <h5 class="card-title"><%= car.brand %> | <%= car.model %></h5>
                  <p class="card-text"><%= car.price_per_hour %>â‚¬/hour</p>
                  <%= link_to 'More details', car_path(car) %>
                </div>
              </div>
            <% end %>
          </div>
      </div>
      <%= render 'shared/map' if @your_index %>
    </div>

  </div>
</div>
