<%= simple_form_for(car) do |f| %>
  <%= f.input :brand %>
  <%= f.input :model %>
  <%= f.input :year %>
  <%= f.input :license_plate %>
  <%= f.input :location %>
  <%= f.input :seats %>
  <%= f.input :color %>
  <%= f.input :transmission %>
  <%= f.input :energy_source %>
  <%= f.input :price_per_hour %>
  <%= f.input :description %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Submit the car", class: "btn btn-primary" %>
<% end %>
